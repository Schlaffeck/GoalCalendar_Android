<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<data>
    <variable android:id="@+id/binding_view_model_variable_id" name="vm" type="com.slamcode.goalcalendar.view.viewmodels.CategoryPlansSummaryViewModel"/>
</data>
<LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="@dimen/list_item_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{vm.name + ':'}"/>
    <TextView
        android:textSize="@dimen/list_item_text_size"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{String.format(@string/plans_summary_percentageFormat, vm.progressPercentage)}"/>
</LinearLayout>
</layout>