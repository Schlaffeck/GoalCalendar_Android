<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.slamcode.goalcalendar.view.utils.ResourcesHelper"/>
        <variable
            name="vm"
            type="com.slamcode.goalcalendar.viewmodels.CategoryPlansViewModel"/>
        <variable
            name="presenter"
            type="com.slamcode.goalcalendar.view.lists.CategoryPlansRecyclerViewAdapter.CategoryPlansViewHolder"/>
    </data>
    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/monthly_goals_table_category_column_height">

        <!-- daily plans list -->
        <com.slamcode.goalcalendar.view.controls.ListenableHorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:layout_marginLeft="@dimen/monthly_goals_table_category_column_width"
            android:layout_marginStart="@dimen/monthly_goals_table_category_column_width">
        <android.support.v7.widget.RecyclerView
            android:background="@color/listItemBackgroundColor"
            android:id="@+id/monthly_goals_list_item_days_list"
            android:horizontalSpacing="@dimen/default_horizontal_spacing"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:scrollbars="none"/>
        </com.slamcode.goalcalendar.view.controls.ListenableHorizontalScrollView>

        <!-- cat name layout -->
        <com.chauthai.swipereveallayout.SwipeRevealLayout
            android:layout_width="@dimen/monthly_goals_table_category_column_width"
            android:layout_height="match_parent"
            app:mode="same_level"
            app:dragEdge="left">

            <!--  swipe menu buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:layout_width="@dimen/monthly_goals_table_category_menu_button_width"
                    android:layout_height="match_parent"
                    android:background="@color/planningStateButton_stateFailed_backgroundColor"
                    android:src="@drawable/ic_delete_white_24dp"
                    android:scaleType="center"
                    android:contentDescription="@string/context_menu_delete_item"
                    android:onClick="@{(view) -> presenter.requestItemRemove()}"/>
                <ImageButton
                    android:layout_width="@dimen/monthly_goals_table_category_menu_button_width"
                    android:layout_height="match_parent"
                    android:background="@color/planningStateButton_stateEmpty_backgroundColor"
                    android:src="@drawable/ic_mode_edit_white_24dp"
                    android:scaleType="center"
                    android:contentDescription="@string/context_menu_edit_item"
                    android:onClick="@{(view) -> presenter.requestItemModify()}"/>
            </LinearLayout>

            <!-- main layout -->
            <LinearLayout
                android:paddingLeft="@dimen/monthly_goals_table_category_column_item_left_padding"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/monthly_goals_list_item_category_panel"
                android:orientation="vertical"
                android:background="@color/listItemBackgroundColor">
                <TextView
                    android:id="@+id/monthly_goals_list_item_category_name"
                    android:textColor="@android:color/tertiary_text_dark"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/monthly_goals_table_category_name_height"
                    android:gravity="center_vertical"
                    android:text="@{vm.name}"
                    android:maxLines="1"
                    android:textSize="@dimen/list_item_text_size"
                    android:ellipsize="marquee"/>

                <TextView
                    android:id="@+id/monthly_goals_list_item_frequency"
                    android:textColor="@android:color/tertiary_text_dark"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/monthly_goals_table_category_frequency_height"
                    android:ellipsize="marquee"
                    android:text="@{String.format(@string/monthly_goals_category_frequencyFormat_textView, vm.frequencyValue, ResourcesHelper.toResourceString(context, vm.frequencyPeriod))}"
                    android:maxLines="1"
                    android:textSize="@dimen/list_item_text_small_size" />
            </LinearLayout>
        </com.chauthai.swipereveallayout.SwipeRevealLayout>
    </FrameLayout>
</layout>