<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            android:id="@+id/binding_view_model_variable_id"
            name="vm"
            type="com.slamcode.goalcalendar.view.viewmodels.MonthlyProgressSummaryViewModel"/>
    </data>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/monthly_goals_summary_generalProgress_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{String.format(@string/monthly_plans_summary_generalPercentage, vm.plansSummaryPercentage)}"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:padding="16dp"/>
    <TextView
        android:id="@+id/monthly_goals_summary_daysLeft_textView"
        android:layout_below="@id/monthly_goals_summary_generalProgress_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{String.format(@string/monthly_plans_summary_noOfDaysLeft, vm.noOfDaysLeft)}"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:padding="16dp"/>

    <TextView
        android:layout_below="@id/monthly_goals_summary_daysLeft_textView"
        android:id="@+id/monthly_goals_summary_details_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/monthly_plans_summary_details"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:padding="16dp"
        android:height="300dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/monthly_goals_summary_categories_recyclerView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
