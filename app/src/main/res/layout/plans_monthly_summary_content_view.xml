        <!--android:id="@+id/monthly_goals_summary_expand_button"-->
        <!--android:gravity="center_vertical"-->
        <!--android:layout_toRightOf="@id/monthly_goals_summary_generalProgress_textView"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/button_more"-->
        <!--android:textColor="@color/planningStateButton_stateEmpty_foregroundColor"-->
        <!--style="@style/Widget.AppCompat.Button.Borderless.Colored"/>-->
</RelativeLayout>
</layout>